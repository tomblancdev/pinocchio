{
  "name": "pinocchio",
  "version": "1.0.0",
  "description": "MCP server that spawns autonomous Claude Code agents in isolated Docker containers - like Pinocchio inside the whale",
  "author": "Tom Blanc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomblancdev/pinocchio.git"
  },
  "bugs": {
    "url": "https://github.com/tomblancdev/pinocchio/issues"
  },
  "homepage": "https://github.com/tomblancdev/pinocchio#readme",
  "keywords": [
    "mcp",
    "claude",
    "docker",
    "agent",
    "ai",
    "automation"
  ],
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "docker:build": "docker build -t claude-agent:latest ./agent-image",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/jest.config.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/jest.config.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/jest.config.js --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dockerode": "^4.0.0",
    "glob": "^10.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.10",
    "jest": "^29.0.0",
    "sinon": "^17.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
